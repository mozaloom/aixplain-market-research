# Environment variables template
# Copy this file to .env and fill in your values

# aiXplain API Key (required)
# Get your API key from https://platform.aixplain.com/
TEAM_API_KEY=your_aixplain_api_key_here

# Backend Configuration
MARKET_RESEARCH_STORAGE=./generated_reports
PORT=8000

# Frontend Configuration  
REACT_APP_API_URL=http://localhost:8000

# Production Configuration (optional)
NODE_ENV=production
PYTHONPATH=/app

# Database Configuration (optional - for persistent job storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/market_research
# REDIS_URL=redis://localhost:6379/0

# Logging Configuration (optional)
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Configuration (optional)
# JWT_SECRET=your_jwt_secret_here
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
